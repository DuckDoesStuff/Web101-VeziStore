{{> spinner}}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">PRODUCT DETAIL</h6>
        <div class="d-flex align-items-center mb-4">
            <div class="position-relative">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-thumbnail" src="assets/pages/img/products/model7.jpg" alt="">
                    </div>
                    {{#with product_info}}
                    <div class="col-md-8">
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Product ID</h6>
                            <div class="col-8">
                                <h6 class="mb-4">{{id}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Product name</h6>
                            <div class="col-8">
                                <h6 class="mb-4">{{name}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Amount</h6>
                            <div class="col-8">
                                <h6 class="mb-4">{{availability}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Quantity sold</h6>
                            <div class="col-8">
                                <h6 class="mb-4">{{sold}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Price</h6>
                            <div class="col-8">
                                <h6 class="mb-4">${{price}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Discount</h6>
                            <div class="col-8">
                                <h6 class="mb-4">${{discount}}</h6>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <h6 class="col-md-3 text-gray">Rate</h6>
                            <div class="col-8">
                                <h6 class="mb-4">{{rating}}</h6>
                            </div>
                        </div>
                        <div class="row"> 
                            <div class="col-8">
                                <a class="btn btn-sm btn-detail" href="/product-info">Update</a> <a class="btn btn-sm btn-primary" href="">Delete</a>
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>